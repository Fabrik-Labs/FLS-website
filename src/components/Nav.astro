<nav class="fixed top-0 left-0 right-0 z-50 bg-warm-gray border-b border-warm-gray-dark">
  <div class="max-w-1200px mx-auto px-6 h-80px flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex-shrink-0">
      <img src="/images/logos/fl-logo-color.svg" alt="Fabrik Labs" class="h-10" />
    </a>

    <!-- Desktop Navigation + CTA grouped together, right-aligned -->
    <div class="hidden md:flex items-center gap-8">
      <a href="/services" class="font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Services</a>
      <a href="/industries" class="font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Industries</a>
      <a href="/case-studies" class="font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Case Studies</a>
      <a href="/blog" class="font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Blog</a>
      <a href="/about" class="font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">About</a>
      <a href="https://cal.com/fabrikbrad/1h-discovery" class="px-6 py-3.5 bg-charcoal text-white rounded font-sans text-14px font-semibold hover:-translate-y-0.5 hover:shadow-md transition-all duration-200">
        Let's Talk
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden p-2 text-charcoal hover:text-teal transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-warm-gray border-t border-warm-gray-dark">
    <div class="px-6 py-4 space-y-4">
      <a href="/services" class="block font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Services</a>
      <a href="/industries" class="block font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Industries</a>
      <a href="/case-studies" class="block font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Case Studies</a>
      <a href="/blog" class="block font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">Blog</a>
      <a href="/about" class="block font-sans text-16px font-semibold text-charcoal hover:text-teal transition-colors">About</a>
      <a href="https://cal.com/fabrikbrad/1h-discovery" class="block px-6 py-3.5 bg-charcoal text-white rounded font-sans text-14px font-semibold text-center hover:-translate-y-0.5 hover:shadow-md transition-all duration-200">
        Let's Talk
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Close menu when a link is clicked
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
</script>
