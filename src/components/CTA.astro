---
interface Props {
  heading: string;
  body: string;
  buttonLabel: string;
  buttonHref: string;
  bgColor?: string;
}

const { heading, body, buttonLabel, buttonHref, bgColor = 'bg-warm-gray' } = Astro.props;
---

<section class={`${bgColor} py-24 md:py-32 px-6 md:px-24`}>
  <div class="max-w-1200px mx-auto text-center">
    <h2 class="font-serif text-40px md:text-48px font-medium text-charcoal mb-6 md:mb-8">
      {heading}
    </h2>
    
    <p class="font-sans text-16px md:text-18px text-charcoal max-w-800px mx-auto mb-8 md:mb-12">
      {body}
    </p>

    <a href={buttonHref} class="inline-block px-8 py-4 bg-charcoal text-white rounded font-sans text-16px font-semibold hover:-translate-y-0.5 hover:shadow-md transition-all duration-200">
      {buttonLabel}
    </a>
  </div>
</section>
