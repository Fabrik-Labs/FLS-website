---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  labelColor?: 'teal' | 'copper';
  darkBg?: boolean;
}

const { label, title, subtitle, labelColor = 'teal', darkBg = true } = Astro.props;

const labelColorClass = labelColor === 'copper' ? 'text-copper' : 'text-teal-light';
const bgClass = darkBg ? 'bg-charcoal' : 'bg-warm-gray-mid';
---

<section class={`${bgClass} pt-32 pb-24 px-6 md:pt-40 md:pb-32 md:px-24`}>
  <div class="max-w-1200px mx-auto">
    {label && (
      <p class={`font-sans text-14px font-semibold uppercase tracking-1.4px ${labelColorClass} mb-6`}>
        {label}
      </p>
    )}
    
    <h1 class="font-serif text-40px md:text-72px font-medium leading-tight mb-6 md:mb-8" style={darkBg ? 'color: white;' : 'color: #1E2428;'}>
      {title}
    </h1>

    {subtitle && (
      <p class={`font-sans text-16px md:text-18px leading-relaxed max-w-800px ${darkBg ? 'text-slate-light' : 'text-charcoal'}`}>
        {subtitle}
      </p>
    )}

    <slot />
  </div>
</section>
