---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import CTA from '../../components/CTA.astro';
import CaseStudyCard from '../../components/CaseStudyCard.astro';
---

<BaseLayout title="Case Studies - Fabrik Labs">
  <Nav />

  <div class="pt-80px">
    <!-- Hero Section -->
    <Hero
      label="Case Studies"
      title="Work that speaks for itself"
    />

    <!-- Case Studies Grid -->
    <section class="bg-warm-gray py-24 md:py-32 px-6 md:px-24">
      <div class="max-w-1200px mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <CaseStudyCard
            href="/case-studies/the-autism-helper"
            industry="Ed-Tech"
            title="The Autism Helper"
            subtitle="From 50-step workarounds to a scalable platform partner"
            image="/images/case-studies/cs-thumbnail-tah.png"
          />
          <CaseStudyCard
            href="/case-studies/alliance-for-decision-education"
            industry="Ed-Tech"
            title="Alliance for Decision Education"
            subtitle="From solution-first to user-centered"
            image="/images/case-studies/cs-thumbnail-alliance.png"
          />
          <CaseStudyCard
            href="/case-studies/4mycity"
            industry="Nonprofit"
            title="4MyCiTy"
            subtitle="From manual check-ins to seamless food rescue tracking"
            image="/images/case-studies/cs-thumbnail-4mc.png"
          />
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTA
      heading="Ready to be our next case study?"
      body="Let's talk about what you're working on."
      buttonLabel="Let's Talk"
      buttonHref="https://cal.com/fabrikbrad/1h-discovery"
      bgColor="bg-warm-gray-mid"
    />
  </div>

  <Footer />
</BaseLayout>
